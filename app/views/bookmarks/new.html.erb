<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a bookmark to your <%= @list.name %> list:</h3>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
          <%= f.association :movie %>
          <%= f.submit "Add Bookmark", class: 'btn btn-outline-secondary' %>
        <% end %>
          <br>
          <%= link_to "Go back to the list", list_path(@list) %>
      </div>
    </div>
  </div>
</div>
