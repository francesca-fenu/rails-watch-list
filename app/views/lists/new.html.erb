<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a movie list</h3>
        <%= simple_form_for (@list) do |f| %>
          <%= f.input :name, placeholder: 'Comedy' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Create list!", class: 'btn btn-outline-secondary' %>
        <% end %>
          <br>
          <%= link_to "Go back to all lists", lists_path %>
      </div>
    </div>
  </div>
</div>