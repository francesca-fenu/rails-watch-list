<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
  <div class="container" style="color: white">
    <h2><%= @list.name %></h2>
  </div>
</div>

<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title %> - <%= bookmark.comment %></p>
  <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }%>
  <br>
<% end %>
<br>
<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>